{
	"private": true,
	"scripts": {
		"fix": "grunt fix",
		"test": "grunt test",
		"selenium-test": "wdio tests/selenium/wdio.conf.js"
	},
	"devDependencies": {
		"@wdio/cli": "6.3.4",
		"@wdio/dot-reporter": "6.11.0",
		"@wdio/junit-reporter": "6.1.9",
		"@wdio/local-runner": "6.3.4",
		"@wdio/mocha-framework": "6.3.0",
		"@wdio/sync": "6.3.3",
		"eslint-config-wikimedia": "0.20.0",
		"grunt": "1.4.0",
		"grunt-banana-checker": "0.9.0",
		"grunt-eslint": "23.0.0",
		"grunt-stylelint": "0.16.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.0",
		"stylelint-config-wikimedia": "0.10.3",
		"wdio-mediawiki": "1.1.1",
		"webdriverio": "6.3.4"
	},
	"eslintIgnore": [
		"vendor/**"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		],
		"*.php": [
			"vendor/bin/parallel-lint --colors",
			"vendor/bin/phpcbf",
			"vendor/bin/phpcs -s"
		],
		"*.json": [
			"eslint --fix"
		],
		"*.{css,scss,less}": [
			"stylelint --fix",
			"git add"
		]
	}
}
